datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Ride {
  id              String   @id @default(uuid())
  customerId      String
  driverId        String?
  pickupLocation  String
  dropoffLocation String
  fare            Float
  status          String   @default("PENDING") // PENDING, ACCEPTED, ON_ROUTE, COMPLETED
  createdAt       DateTime @default(now())
}