datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // bắt buộc phải có
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String
  role      String
  createdAt DateTime @default(now())
}
